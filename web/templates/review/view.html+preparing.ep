    <h1>
      <small style="display:block;margin-bottom:10px;"><%= $talk->eventname . " videos" =%></small>
      <%= $talk->title =%>
    </h1>
    <div class="row" style="margin-top:20px;">
      <div class="col-sm-12">
        <dl class="dl-horizontal" style="margin-bottom:5px;">
          <dt>Speakers:</dt>
          <dd><%= $talk->speakers =%></dd>
          <dt>Date:<dt>
          <dd><%= $talk->readable_date =%></dd>
          <dt>Room:</dt>
          <dd><%= $talk->room =%></dd>
        </dl>
      </div>
    </div>

    <div class="row" id="video_state_information">
      <div class="col-sm-6">
        <div class="alert alert-info" role="alert">
          <p>We are currently generating the video of this talk.<p>
          <p><strong>We will send you an email</strong> when the video is ready for review.</p>
        </div>
      </div>
    </div>
